{
  "extends": ["airbnb-base", "plugin:n/recommended", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".mjs", ".cjs"]
      }
    }
  },
  "rules": {
    "prettier/prettier": "error",

    /* --- your original prefs --- */
    "spaced-comment": "off",
    "no-console": "warn",
    "consistent-return": "off",
    "func-names": "off",
    "object-shorthand": "off",
    "no-process-exit": "off",
    "no-param-reassign": "off",
    "no-return-await": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "prefer-destructuring": ["error", { "object": true, "array": false }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "req|res|next|val" }],

    /* --- ESM/Node import hygiene --- */
    // Node ESM needs explicit extensions in relative imports
    "import/extensions": [
      "error",
      "ignorePackages",
      { "js": "always", "mjs": "always", "cjs": "always" }
    ],
    // Allow named exports from single-file modules (Airbnb prefers default)
    "import/prefer-default-export": "off",
    // Let devDeps in tests/config/tools
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.*",
          "**/*.spec.*",
          "**/tests/**",
          "**/scripts/**",
          "**/*.config.*",
          "**/vite.*",
          "**/eslint.*",
          "**/jest.*"
        ]
      }
    ],
    // eslint-plugin-n: honor file extensions when checking "missing import"
    "n/no-missing-import": [
      "error",
      { "tryExtensions": [".js", ".mjs", ".cjs", ".json"] }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.cjs"],
      "parserOptions": { "sourceType": "script" } // CJS files
    }
  ]
}
